(defwidget clock []
	(box 
		:class "clock"
		:orientation "v"
		:space-evenly false
		:spacing 5
		:halign "center"
		(label 
			:class "clock hour" 
			:text {formattime(EWW_TIME, "%H", "America/Edmonton")}
		)
		(label 
			:class "clock separator" 
			:text "ï…‚"
			:angle "90"
		)
		(label 
			:class "clock minute" 
			:text {formattime(EWW_TIME, "%M", "America/Edmonton")}
		)
	)
)
